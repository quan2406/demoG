<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="169dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="Số Xe:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="Quãng Đường(Km):"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSoXe" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="169dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Đơn Giá(VNĐ):"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQuangDuong" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="169dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="Khuyến Mãi (%):"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDonGia" />

    <EditText
        android:id="@+id/etSoXe"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Số Xe"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etQuangDuong"
        android:layout_width="205dp"
        android:layout_height="59dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Quãng Đường"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etDonGia"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Đơn Giá"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etKhuyenMai"
        android:layout_width="209dp"
        android:layout_height="56dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:hint="Khuyen Mai"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnSua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="49dp"
        android:text="Sửa"
        app:layout_constraintEnd_toStartOf="@+id/btnQuayVe"
        app:layout_constraintTop_toBottomOf="@+id/etKhuyenMai" />

    <Button
        android:id="@+id/btnQuayVe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="40dp"
        android:text="QuayVe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etKhuyenMai" />
</androidx.constraintlayout.widget.ConstraintLayout>